{
  "author": "tOwn",
  "name": "identity-contract",
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "version": "0.0.0",
  "homepage": "https://github.com/t0wn/identity-contract/wiki/Home",
  "repository": {
    "type": "git",
    "url": "https://github.com/t0wn/identity-contract"
  },
  "bugs": {
    "url": "https://github.com/t0wn/identity-contract/issues"
  },
  "files": [
    "artifacts",
    "contracts",
    "dist",
    "src",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf build && rm -rf dist && rm -rf out && rm -rf types && rm -rf artifacts && rm -rf cache",
    "compile:contracts": "hardhat compile",
    "build": "npm run compile:contracts && npm run pretty && tsc",
    "build:watch": "tsc --watch",
    "rebuild": "npm run clean && npm run build",
    "test": "hardhat test",
    "posttest": "npm run lint",
    "lint": "solhint 'contracts/**/*.sol' && eslint",
    "pretty": "pretty-quick",
    "release": "standard-version",
    "prepublishOnly": "npm run rebuild && npm run release",
    "ci-prepare": "cp example.secrets.json .secrets.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "ethers": "5.7.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@nomiclabs/hardhat-waffle": "2.0.6",
    "@typechain/ethers-v5": "10.2.1",
    "@typechain/hardhat": "6.1.6",
    "@types/chai": "4.3.5",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "10.0.1",
    "@types/node": "20.3.1",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "chai": "4.3.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.44.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "4.0.10",
    "hardhat": "2.16.1",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "pretty-quick": "3.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.5.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "tsutils": "3.21.0",
    "typechain": "8.1.1",
    "typescript": "5.1.6"
  },
  "engines": {
    "npm": ">=7.20",
    "node": ">=16.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "issueUrlFormat": "https://github.com/tOwn/identity-contract/issues/{{id}}",
    "issuePrefixes": [
      "#"
    ],
    "scripts": {
      "postchangelog": "npm run pretty"
    }
  }
}
